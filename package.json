{
  "name": "di-data-analytics-platform",
  "version": "0.0.1",
  "description": "Data and Analytics platform which will enable the implementation of the OneLogin reporting strategy",
  "license": "MIT",
  "repository": "github:alphagov/di-data-analytics-platform",
  "devDependencies": {
    "@aws-lambda-powertools/logger": "^1.14.0",
    "@aws-lambda-powertools/metrics": "^1.14.0",
    "@aws-sdk/client-athena": "^3.421.0",
    "@aws-sdk/client-cloudwatch-logs": "^3.421.0",
    "@aws-sdk/client-firehose": "^3.421.0",
    "@aws-sdk/client-lambda": "^3.421.0",
    "@aws-sdk/client-redshift-data": "^3.421.0",
    "@aws-sdk/client-s3": "^3.421.0",
    "@aws-sdk/client-sfn": "^3.421.0",
    "@aws-sdk/client-sqs": "^3.427.0",
    "@aws-sdk/types": "^3.418.0",
    "@faker-js/faker": "^8.1.0",
    "@smithy/util-retry": "^2.0.3",
    "@tsconfig/node18": "^18.2.2",
    "@types/aws-lambda": "^8.10.122",
    "@types/jest": "^29.5.5",
    "@types/uuid": "^9.0.4",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "aws-sdk-client-mock": "^3.0.0",
    "esbuild": "^0.19.4",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^39.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-stare": "^2.5.1",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "prettier-plugin-sh": "^0.13.1",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "scripts/build-lambdas.sh",
    "check": "npm run format:check && npm run lint:check",
    "format:check": "prettier --check src tests",
    "format:fix": "prettier --write src tests",
    "lint:check": "eslint src tests",
    "lint:fix": "eslint --fix src tests",
    "test": "jest --silent src",
    "integration-test": "scripts/integration-test-check.sh && jest --silent ./tests/integration-tests --maxWorkers=4",
    "e2e-test": "scripts/integration-test-check.sh && jest --silent ./tests/e2e-tests --maxWorkers=4",
    "smoke-test": "scripts/integration-test-check.sh && jest ./tests/smoke-tests/smoke-tests.spec.ts --silent --maxWorkers=4",
    "iac:build": "scripts/build-sam-template.sh",
    "iac:lint": "npm run iac:build && sam validate --lint --region eu-west-2",
    "iac:scan": "npm run iac:build && checkov --config-file .checkov.local.yml --file template.yaml --quiet",
    "iac:format:check": "prettier --check iac",
    "iac:format:fix": "prettier --write iac",
    "teardown:prepare": "scripts/teardown-prepare.sh",
    "teardown:delete-stack": "sam delete --region eu-west-2 --stack-name dap --no-prompts --debug",
    "husky:install": "husky install"
  },
  "lint-staged": {
    "*": "prettier --write",
    "*.{js,ts}": "eslint --fix"
  }
}
