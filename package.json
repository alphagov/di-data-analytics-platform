{
  "name": "data-analytics-platform",
  "version": "0.0.1",
  "description": "Data and Analytics platform which will enable the implementation of the OneLogin reporting strategy",
  "license": "MIT",
  "repository": "github:govuk-one-login/data-analytics-platform",
  "devDependencies": {
    "@aws-lambda-powertools/logger": "^1.17.0",
    "@aws-lambda-powertools/metrics": "^1.17.0",
    "@aws-sdk/client-athena": "^3.485.0",
    "@aws-sdk/client-cloudwatch-logs": "^3.485.0",
    "@aws-sdk/client-cognito-identity-provider": "^3.485.0",
    "@aws-sdk/client-firehose": "^3.485.0",
    "@aws-sdk/client-lambda": "^3.485.0",
    "@aws-sdk/client-quicksight": "^3.485.0",
    "@aws-sdk/client-redshift-data": "^3.485.0",
    "@aws-sdk/client-s3": "^3.485.0",
    "@aws-sdk/client-sfn": "^3.485.0",
    "@aws-sdk/client-sqs": "^3.485.0",
    "@aws-sdk/types": "^3.485.0",
    "@faker-js/faker": "^8.3.1",
    "@smithy/util-retry": "^2.0.9",
    "@tsconfig/node18": "^18.2.2",
    "@types/aws-lambda": "^8.10.131",
    "@types/jest": "^29.5.11",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "aws-sdk-client-mock": "^3.0.1",
    "esbuild": "^0.19.11",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.0",
    "html-minifier": "^4.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-stare": "^2.5.1",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "prettier-plugin-sh": "^0.13.1",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "build": "scripts/build-lambdas.sh",
    "check": "npm run format:check && npm run lint:check",
    "format:check": "prettier --check src tests",
    "format:fix": "prettier --write src tests",
    "lint:check": "eslint src tests",
    "lint:fix": "eslint --fix src tests",
    "test": "jest --silent src",
    "integration-test": "scripts/integration-test-check.sh && jest --silent ./tests/integration-tests --maxWorkers=4",
    "e2e-test": "scripts/integration-test-check.sh && jest --silent ./tests/e2e-tests --maxWorkers=4",
    "smoke-test": "scripts/integration-test-check.sh && jest ./tests/smoke-tests/smoke-tests.spec.ts --silent --maxWorkers=4",
    "regression-test": "scripts/integration-test-check.sh && jest --silent ./tests/regression-tests --maxWorkers=4",
    "iac:build": "scripts/build-sam-template.sh",
    "iac:buildall": "scripts/build-sam-templates.sh",
    "iac:lint": "npm run iac:buildall && find iac-dist -maxdepth 1 -type f -exec sam validate --lint --region eu-west-2 --template-file {} \\;",
    "iac:scan": "npm run iac:buildall && checkov --config-file .checkov.local.yml --directory iac-dist --quiet",
    "iac:format:check": "prettier --check iac",
    "iac:format:fix": "prettier --write iac",
    "teardown:prepare": "scripts/teardown-prepare.sh",
    "teardown:delete-stack": "sam delete --region eu-west-2 --no-prompts --debug --stack-name",
    "husky:install": "husky install"
  },
  "lint-staged": {
    "*": "prettier --write",
    "*.{js,ts}": "eslint --fix"
  }
}
