{
  "name": "di-data-analytics-platform",
  "version": "0.0.1",
  "description": "Data and Analytics platform which will enable the implementation of the OneLogin reporting strategy",
  "license": "MIT",
  "repository": "github:alphagov/di-data-analytics-platform",
  "devDependencies": {
    "@aws-sdk/client-firehose": "^3.329.0",
    "@aws-sdk/types": "^3.329.0",
    "@tsconfig/node18": "^2.0.1",
    "@types/aws-lambda": "^8.10.115",
    "@types/jest": "^29.5.1",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "aws-sdk-client-mock": "^2.1.1",
    "esbuild": "^0.17.18",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4"
  },
  "scripts": {
    "build": "scripts/build-lambdas.sh",
    "check": "npm run format:check && npm run lint:check",
    "format:check": "prettier --check src",
    "format:fix": "prettier --write src",
    "lint:check": "eslint src",
    "lint:fix": "eslint --fix src",
    "test": "jest",
    "iac:lint": "sam validate --lint --region eu-west-2",
    "iac:scan": "checkov --external-checks-git https://github.com/alphagov/di-devplatform-checkov-hook.git//src/gds_digitalidentity_checkovhook/custom_policies --external-checks-git https://github.com/alphagov/di-devplatform-checkov-hook.git//src/gds_digitalidentity_checkovhook/custom_policies_precommit --file template.yaml --quiet",
    "iac:format:check": "prettier --check template.yaml",
    "iac:format:fix": "prettier --write template.yaml"
  }
}
