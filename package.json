    "@aws-sdk/client-athena": "^3.360.0",
    "@aws-sdk/client-cloudwatch-logs": "^3.360.0",
    "@aws-sdk/client-firehose": "^3.360.0",
    "@aws-sdk/client-lambda": "^3.360.0",
    "@aws-sdk/client-s3": "^3.360.0",
    "@aws-sdk/client-sqs": "^3.360.0",
    "@aws-sdk/types": "^3.357.0",
    "@aws-sdk/util-retry": "^3.357.0",
    "@faker-js/faker": "^8.0.2",
    "@tsconfig/node18": "^2.0.1",
    "@types/aws-lambda": "^8.10.119",
    "@types/jest": "^29.5.2",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "aws-sdk-client-mock": "^2.2.0",
    "esbuild": "^0.18.10",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^35.0.0",
    "jest": "^29.5.0",
    "jest-stare": "^2.5.0",
    "prettier": "^2.8.8",
    "typescript": "^5.1.3"
  },
  "scripts": {
    "build": "scripts/build-lambdas.sh",
    "check": "npm run format:check && npm run lint:check",
    "format:check": "prettier --check src integration-test",
    "format:fix": "prettier --write src integration-test",
    "lint:check": "eslint src integration-test",
    "lint:fix": "eslint --fix src integration-test",
    "test": "jest src",
    "integration-test": "scripts/integration-test-check.sh && jest ./integration-test",
    "iac:build": "scripts/build-sam-template.sh",
    "s3:empty-buckets": "scripts/s3-empty.sh",    
    "iac:lint": "npm run iac:build && sam validate --lint --region eu-west-2",
    "iac:scan": "npm run iac:build && checkov --config-file .checkov.local.yml --file template.yaml --quiet",
    "iac:format:check": "prettier --check iac",
    "iac:format:fix": "prettier --write iac"
  }
